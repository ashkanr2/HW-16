@model Online_shop.Models.Product
<br />
<br />
<br />
<br />
<br />
<br />

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"> لطفا فیلد های مدبوطه را پر کنید</h5>
            <small class="text-muted float-end">ویرایش کالا</small>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    
                    <input type="text" hidden class="form-control" id="basic-default-fullname" value=@Model.Id asp-for="@Model.Id" >
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.ProductName">نام کالا</label>
                    <input type="text" class="form-control" id="basic-default-fullname" value="" asp-for="@Model.ProductName" placeholder="@Model.ProductName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Price">قیمت</label>
                    <input type="text" class="form-control" id="basic-default-company" value="" asp-for="@Model.Price" placeholder="@Model.Price" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Price">تعداد</label>
                    <input type="text" class="form-control" id="basic-default-company" value="" asp-for="@Model.Qty" placeholder="@Model.Qty" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Price">تاریخ ورود جدید</label>
                    <input type="text" class="form-control" id="basic-default-company" value="" asp-for="@Model.EnterTime" placeholder="@Model.EnterTime" required>
                </div>
                

                <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="EditProduct">ویرایش</button>
            </form>
        </div>
    </div>
</div>